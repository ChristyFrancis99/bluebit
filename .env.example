# ── Local Dev (no PostgreSQL/Redis needed — uses SQLite + fakeredis) ──────────
APP_NAME=Academic Integrity System
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# Leave as-is for local dev — will auto-fallback to SQLite
DATABASE_URL=postgresql+asyncpg://integrity:integrity@localhost:5432/academic_integrity

# Redis — will auto-fallback to in-memory if not available
REDIS_URL=redis://localhost:6379/0

# Storage — will auto-fallback to local filesystem if MinIO not running
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=submissions

# AI Detection (mock mode = no model weights needed)
AI_DETECTION_MOCK=true
AI_DETECTION_MODEL_PATH=./weights/ai_detector_v2
AI_DETECTION_USE_GPU=false

JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]
